<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>DPM</title>
</head>


<div class="jumbotron text-center">
    <Header>
        <h1>Welcome to Drive Permission Manager</h1>
    </Header>
</div>

<body>

    <div class="btn-group-vertical" id='container'></div>

    <script>
        const files = JSON.parse('<%- JSON.stringify(array)%>');
        let children = [];
        files.forEach((file) => {
            children = [...children, ...(file.children || [])];
            // console.log(file);
        });
        const parentNodes = files.filter((file) => {
            const result = !children.includes(file.id);
            return result;
        });
        // console.log(parentNodes);
        const container = document.getElementById('container');
        parentNodes.forEach((parent) => {
            const button = document.createElement('button');
            button.className = "btn btn-primary";
            button.innerText = parent.name;
            container.appendChild(button);
        });
    </script>

</body>



</html>